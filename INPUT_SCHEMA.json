{
    "title": "Zillow.com scraper input schema",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "search": {
            "title": "Search",
            "type": "string",
            "editor": "textfield",
            "prefill": "Los Angeles",
            "description": "Query to search on Zillow.com"
        },
        "type": {
            "title": "Type",
            "type": "string",
            "description": "Property for sale/rent",
            "default": "sale",
            "enum": [
                "sale",
                "fsbo",
                "rent"
            ],
            "enumTitles": [
                "For sale",
                "For sale by owner",
                "For rent"
            ]
        },
        "startUrls": {
            "title": "Start URLs",
            "type": "array",
            "editor": "requestListSources",
            "description": "List of URLs that will be scraped or crawled. Can be main website URL, category/search URLs or detail/product URLs."
        },
        "maxLevel": {
            "title": "Max zoom level",
            "type": "integer",
            "minimum": 0,
            "prefill": 20,
            "description": "Maximum map splitting level"
        },
        "maxItems": {
            "title": "Max items",
            "type": "integer",
            "minimum": 0,
            "prefill": 200,
            "description": "Limit of home detail pages to be scraped"
        },
        "minDate": {
            "title": "Min date",
            "type": "string",
            "editor": "textfield",
            "description": "Oldest date allowed in results"
        },
        "extendOutputFunction": {
            "title": "Extend output function",
            "type": "string",
            "editor": "javascript",
            "description": "A function which result will get merged with the default result",
            "prefill": "(data) => {\n    return {};\n}",
            "sectionCaption": "Advanced options"
        },
        "proxyConfiguration": {
            "title": "Proxy configuration",
            "type": "object",
            "editor": "proxy",
            "description": "The best option is usually Automatic proxy. But you can also use your own proxies or no proxy",
            "prefill": { "useApifyProxy": true }
        }
    }
}
